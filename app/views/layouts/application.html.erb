        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if controller.controller_name == "prelaunches" %>
            <% else %>
            <li><a href="/faq">FAQ</a> </li>
            <% end %>
            <li><a style="background-color: #4fad21; color: white" href="mailto:support@getgreenir.com?Subject=Help%20With%20Greenir">Contact Us</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>


<%= yield %>

<% if controller.controller_name == "not_availables" || controller.controller_name == "prelaunches" %>
<% else %>

<%= render "layouts/footer" %>
<% end %>


